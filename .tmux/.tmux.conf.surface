#==============================================================================
# ~/.tmux/.tmux.conf.surface
#------------------------------------------------------------------------------
# Author: Erik Schreier
# Date:   Jan. 24 2019
#==============================================================================
# Marker Colors
MkOr="#[fg=colour234,bg=colour208,bold]"
MkGn="#[fg=colour234,bg=colour148,bold]"
MkYe="#[fg=colour234,bg=colour214,bold]"
MkBl="#[fg=colour234,bg=colour074,bold]"
MkPu="#[fg=colour234,bg=colour205,bold]"
MkAq="#[fg=colour234,bg=colour037,bold]"
# Label Colors
LbOr="#[fg=colour208,bg=colour236,nobold]"
LbGn="#[fg=colour148,bg=colour236,nobold]"
LbYe="#[fg=colour214,bg=colour236,nobold]"
LbBl="#[fg=colour074,bg=colour236,nobold]"
LbPu="#[fg=colour205,bg=colour236,nobold]"
LbAq="#[fg=colour037,bg=colour236,nobold]"
#------------------------------------------------------------------------------
# Text Snipets
#------------------------------------------------------------------------------
# Left Side
StLt="$MkAq #S #[bg=default] "
WnSC="$MkGn #I $LbGn #W#F "
WnSt="$MkOr #I $LbOr #W#F "
# Right Side
DtTm="$LbYe %a %-d. %B %Y $MkYe %H:%M #[bg=default] "
HsWh="$LbPu #h $MkPu #(whoami) "
StRt="$DtTm$HsWh"
#------------------------------------------------------------------------------
# statusbar
#------------------------------------------------------------------------------
set -g pane-active-border-bg default
set -g pane-active-border-fg colour148
set -g pane-border-bg default 
set -g pane-border-fg colour214

set -g message-fg colour148
set -g message-bg colour234

set -g status-justify left
set -g status-bg colour234
set -g status-fg colour000
#------------------------------------------------------------------------------
# left side
#------------------------------------------------------------------------------
setw -g status-left-length 10
setw -g status-left $StLt
setw -g window-status-separator " "
setw -g window-status-current-format $WnSC
setw -g window-status-format $WnSt
#------------------------------------------------------------------------------
# right side
#------------------------------------------------------------------------------
set -g status-right-length 100
set -g status-right $StRt
